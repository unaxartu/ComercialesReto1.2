<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/paisaje_con_montanas"
    android:id="@+id/drawer_layout">

    <!-- Contenido principal de la actividad -->
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <!-- Cabecera del menú (header) -->
        <include layout="@layout/header" />

        <!-- Título de la pantalla -->
        <TextView
            android:id="@+id/textView20"
            android:layout_width="256dp"
            android:layout_height="67dp"
            android:background="@color/grey"
            android:gravity="center"
            android:text="Consulta de los Partners"
            android:textColor="@color/black"
            android:textSize="20sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.754"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.078" />

        <!-- Lista de Partners -->
        <ListView
            android:id="@+id/listView"
            android:layout_width="320dp"
            android:layout_height="187dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.37"
            android:background="@color/grey"
            android:textColor="@color/black"/>

        <!-- Campo de nombres -->
        <TextView
            android:id="@+id/textView21"
            android:layout_width="80dp"
            android:layout_height="31dp"
            android:gravity="center"
            android:text="Nombres"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.111"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.221"
            android:background="@color/grey"
            android:textColor="@color/black"/>

        <!-- Campo de apellidos -->
        <TextView
            android:id="@+id/textView22"
            android:layout_width="78dp"
            android:layout_height="34dp"
            android:gravity="center"
            android:text="Apellidos"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.699"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.223"
            android:background="@color/grey"
            android:textColor="@color/black"/>

        <!-- Botón de retroceso -->
        <ImageButton
            android:id="@+id/flechaAtrasConsultaPartners"
            android:layout_width="46dp"
            android:layout_height="41dp"
            android:scaleType="fitCenter"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.043"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.095"
            app:srcCompat="@drawable/flecha_atras_pedidos" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <!-- Menú lateral -->
    <include layout="@layout/menu_lateral" />

</androidx.drawerlayout.widget.DrawerLayout>
