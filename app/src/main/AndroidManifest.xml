<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.comercialesreto12">

    <application
        android:allowBackup="true"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/Theme.ComercialesReto12">

        <!-- Declaración de la actividad principal -->
        <activity
            android:name=".MainActivity"
            android:exported="true"> <!-- Añadir android:exported="true" para cumplir con las últimas directrices -->
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <!-- Declaración de la actividad Agenda -->
        <activity android:name=".Agenda" />
    </application>

</manifest>
